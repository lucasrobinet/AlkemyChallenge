@model IEnumerable<AhoraSi.Models.Character>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" style="width:auto" asp-action="Create">Create New Character</a>
</p>

<form method="get" asp-action="Index">
    <p>
        <input type="search" placeholder="Search by Name" value="@ViewData["GetAllMovies"]" name="name" />
        <input type="submit" value="Search" class="btn btn-primary" /> |
        <a asp-action="Index">Get All Movies</a>
    </p>
</form>

<div class="card-deck">
    @foreach (var character in Model)
    {
        var imagePath = "~/image/" + (character.Image);
        <div class="card m-3" style="min-width: 300px; max-width: 300px">
            <div class="card-header">
                <h3>@character.Name</h3>
            </div>
            <img class="card-img-top image" style="max-height:250px;min-height:250px" src="@imagePath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-action="Edit" asp-route-id="@character.Id" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@character.Id" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@character.Id" class=" btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
