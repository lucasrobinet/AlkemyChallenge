@model AhoraSi.Models.ViewModels.Roles
@{
    ViewData["Title"] = "CreateRol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateRol</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RolName" class="control-label"></label>
                <input asp-for="RolName" class="form-control" placeholder="Name"/>
                <span asp-validation-for="RolName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width:auto">
                    Create Rol
                </button>
                <a class="btn btn-info" asp-action="RoleList">Role List</a>
            </div>
        </form>
    </div>
</div>