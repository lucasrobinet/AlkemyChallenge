@model AhoraSi.Models.ViewModels.EditRoles

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RolName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RolName" class="form-control" />
                <span asp-validation-for="RolName" class="text-danger"></span>
            </div>
        </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Save</button>
            <a asp-action="RoleList" class="btn btn-danger" style="width:auto">Cancel</a>
            <a asp-controller="Roles" asp-action="Delete" class="btn btn-dark">Delete</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users: </h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                for(int i = 0; i < Model.Users.Count; i++)
                {
                    <h5 class="card-title">@Model.Users[i]</h5>
                }
            }
            else
            {
                <h5 class="card-title">Nothing yet...</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Roles" asp-action="EditUserRol"
               asp-route-rolId="@Model.Id" class="btn btn-primary" style="width:auto">
                Create or Delete
            </a>
        </div>
    </div>
</form>
