@model AhoraSi.Models.MovieOrSerie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>MovieOrSerie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valoration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valoration)
        </dd>
        <dt class="col-sm-2">
            Uploaded Image
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/Image/"+ Model.Image)" asp-append-version="true" width="250px" height="250px" />
        </dd>
        <dt class="col-sm-2">
            Genres
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.GenreOfShows)
            {
                @Html.DisplayFor(model => item.Genre.Name) <br />

            }
        </dd>
        <dt class="col-sm-2">
            Characters Enrroled
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.CharacterOfShows)
            {

                @Html.DisplayFor(model => item.Character.Name) <br />

            }
    </dl>
</div>



    <div>
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a class="btn btn-info" asp-action="Index">Back to List</a>
    </div>
